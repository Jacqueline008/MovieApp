/* 引入name=starsTemplate的模板的样式 */
@import "../stars/stars-template.wxss";

/*最外层容器  */
.container{
  display: flex;
  flex-direction: column;
}

/*最上面的背景图  */
.head-img{
  width: 100%;
  height: 320rpx;
  -webkit-filter:blur(20px); 
}

/*背景图上的文字  */
.head-img-hover{
  width:100%;
  height:320rpx;
  position: absolute;
  top:0;
  left:0;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size:19px;
  color:#fff;
  font-weight: bold;
  margin-top:50rpx;
  margin-left:40rpx;
  letter-spacing: 2px;
}
.sub-title{
  font-size:28rpx;
  color:#fff;
  margin-top:30rpx;
  margin-left:40rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top:30rpx;
  margin-left:40rpx;
}
.highlight-font{
  color:#f21146;
  font-size:22rpx;
  margin-right:10rpx;
}
.plain-font{
  color:#666;
  font-size:22rpx;
  margin-right:30rpx;
}

/*背景图上悬浮的图片  */
.movie-img{
  width:175rpx;
  height:238rpx;
  position: absolute;
  top:160rpx;
  right:30rpx;
}

/*简要介绍容器  */
.summary{
  margin-top:40rpx;
  margin-left:40rpx;
  color:#777;
}
.original-title{
  color:#1f3463;
  font-size:24rpx;
  font-weight: bold;
  margin-bottom:40rpx;
}
.flex-row{
  display:flex;
  flex-direction:row;
  margin-bottom:10rpx; 
}
.mark{
  margin-right:30rpx;
  color:#999;
}

/*剧情简介  */
.hr{
  width:100%;
  height:1px;
  margin-top:45rpx;
  background-color: #d9d9d9;
}
.synopsis{
  margin-left:40rpx;
  margin-top:50rpx;
  display: flex;
  flex-direction: column;
}
.synopsis-font{
  color:#999;
}
.summary-content{
  margin-top:20rpx;
  margin-right:40rpx;
  line-height:40rpx;
  letter-spacing:1px;
}

/*影人介绍  */
.cast{
  display: flex;
  flex-direction: column;
  margin-left:40rpx;
  margin-top:50rpx;
}
.cast-font{
  color:#999;
  margin-bottom:40rpx;
}
.cast-imgs{
   white-space: nowrap; 
}
.cast-container{
  display:inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width:170rpx;
  text-align: center;
  white-space: normal; 
}
.cast-img{
  width:170rpx;
  height:210rpx;
}
.cast-name{
  margin:10rpx auto 0 ;
} 
