/*文章 */
.post-container{
  display:flex;
  flex-direction: column;
}
/*文章作者和日期  */
.post-author-date{
    margin: 10rpx 0;  
}
.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;   
}
.post-date{
  margin-left: 20rpx;
  font-size:26rpx;
}
/*文章标题  */
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color:#333;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}
/*文章图片  */
.post-image{
  width: 100%;
  height: 450rpx;
}
/*文章内容  */
.post-content{
  color:#333;
  font-size: 28rpx;
  margin: 10rpx;
  letter-spacing: 2rpx;
  line-height: 50rpx;
}
/*文章欢迎度  */
.post-like{
  font-size: 20rpx;
  margin: 20rpx 0 20rpx 10rpx;
}
.post-like-image{
  width:30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle; 
}
.post-like-font{
   vertical-align: middle;  
   margin-right:20rpx;
}