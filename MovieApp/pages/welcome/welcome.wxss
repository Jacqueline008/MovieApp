/*最外层容器  */
page{
  height: 100%;
  background-color: #b3d4db;
}

/*弹性盒子  */
.container{
  display:flex;
  flex-direction: column; 
  align-items: center;             
}

/*图片  */
.user-avatar{
  width:200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

/*文本上  */
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight:bold;
}

/*文本下  */
.moto-container{
  margin-top:200rpx;
  border:1px solid #405f80;
  border-radius: 5px;
  width:200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.moto{
  font-size:22rpx;
  font-weight: bold;
  color:#405f80;
}