/*引入name=movieListTemplate的模板的样式  */
@import "movie-list/movie-list-template.wxss";
/*引入name=movieGridTemplate的模板的样式  */
@import "movie-grid/movie-grid-template.wxss";

/*搜索框样式  */
.search{
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search-img{
  margin:auto 0 auto 20rpx;
}
.search input{
  height: 100%;
  width:600rpx;
  margin-left: 20px;
  font-size:28rpx;
}
.placeholder{
  font-size:14px;
  color:#d1d1d1;
  margin-left: 20rpx;
}


/*3个电影列表的最外层容器  */
.container{
  background-color: #f2f2f2;
}
.movies-template{
  margin-bottom:30rpx;
}


/*搜索框搜索结果样式  */
.search-panel{
  position: absolute;
  top:80rpx;
}
.xx-img{
  width:30rpx;
  height: 30rpx;
  margin:auto 0 auto 10rpx;
}